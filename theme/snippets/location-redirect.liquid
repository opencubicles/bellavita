{% if shop.permanent_domain == 'bellavitauae.myshopify.com' %}
{%- unless page.handle contains '404' -%}
  <style>
    .location-popup-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      z-index: 9998;
      animation: fadeIn 0.3s ease;
    }

    .location-popup {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: white;
      border-radius: 12px;
      padding: 32px;
      max-width: 400px;
      width: 90%;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
      z-index: 9999;
      animation: slideUp 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translate(-50%, -40%);
      }
      to {
        opacity: 1;
        transform: translate(-50%, -50%);
      }
    }

    .location-popup.show,
    .location-popup-overlay.show {
      display: block;
    }

    .location-popup-icon {
      text-align: center;
      font-size: 48px;
      margin-bottom: 16px;
    }

    .location-popup-title {
      font-size: 22px;
      font-weight: 600;
      text-align: center;
      margin-bottom: 12px;
      color: #333;
    }

    .location-popup-message {
      font-size: 15px;
      text-align: center;
      color: #666;
      margin-bottom: 24px;
      line-height: 1.5;
    }

    .location-popup-buttons {
      display: flex;
      gap: 12px;
    }

    .location-popup-btn {
      flex: 1;
      padding: 14px 20px;
      border: none;
      border-radius: 8px;
      font-size: 11px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .location-popup-btn-primary {
      background: #000;
      color: white;
    }

    .location-popup-btn-primary:hover {
      background: #333;
      transform: translateY(-1px);
    }

    .location-popup-btn-secondary {
      background: #f5f5f5;
      color: #333;
    }

    .location-popup-btn-secondary:hover {
      background: #e5e5e5;
      transform: translateY(-1px);
    }
  </style>

  <div class="location-popup-overlay" id="locationOverlay"></div>
  <div class="location-popup" id="locationPopup">
    <div class="location-popup-icon">üìç</div>
    <h2 class="location-popup-title">We found your location!</h2>
    <p class="location-popup-message" id="popupMessage">
      We detected that you're browsing from India. Would you like to visit our India store for a better shopping experience?
    </p>
    <div class="location-popup-buttons">
      <button class="location-popup-btn location-popup-btn-secondary" id="stayBtn">
        Stay Here
      </button>
      <button class="location-popup-btn location-popup-btn-primary" id="redirectBtn">
        Visit India Store
      </button>
    </div>
  </div>

  <script>
    (function() {
      const STORAGE_KEY = 'locationPreference';
      const popup = document.getElementById('locationPopup');
      const overlay = document.getElementById('locationOverlay');
      const stayBtn = document.getElementById('stayBtn');
      const redirectBtn = document.getElementById('redirectBtn');

      // Check if user already made a choice
      const savedPreference = sessionStorage.getItem(STORAGE_KEY);
      if (savedPreference) {
        return; // Don't show popup if preference exists
      }

      // Fetch location data
      fetch('/browsing_context_suggestions.json')
        .then(res => res.json())
        .then(data => {
          const country = data?.detected_values?.country?.handle?.toUpperCase();

          // Only show popup for India visitors
          if (country === "IN") {
            popup.classList.add('show');
            overlay.classList.add('show');

            // Handle Stay Here button
            stayBtn.addEventListener('click', function() {
              sessionStorage.setItem(STORAGE_KEY, 'stay');
              closePopup();
            });

            // Handle Redirect button
            redirectBtn.addEventListener('click', function() {
              sessionStorage.setItem(STORAGE_KEY, 'redirect');
              window.location.href = "https://embarouge.in/";
            });

            // Close popup when clicking overlay
            overlay.addEventListener('click', function() {
              sessionStorage.setItem(STORAGE_KEY, 'stay');
              closePopup();
            });
          }
        })
        .catch(() => {});

      function closePopup() {
        popup.classList.remove('show');
        overlay.classList.remove('show');
      }
    })();
  </script>
{%- endunless -%}
{% endif %}