{% schema %}
{
  "name": "Responsive Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Banner Image (1920Ã—400)"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Responsive Banner"
    }
  ]
}
{% endschema %}

<div class="responsive-banner">
  {% if section.settings.desktop_image != blank %}
    <img src="{{ section.settings.desktop_image | image_url: width: 2000 }}"
         alt="Desktop Banner"
         class="banner-image desktop-banner">
  {% endif %}

  {% if section.settings.mobile_image != blank %}
    <img src="{{ section.settings.mobile_image | image_url: width: 1000 }}"
         alt="Mobile Banner"
         class="banner-image mobile-banner">
  {% endif %}
</div>

<style>
.page-title {
    display:none;
}
.responsive-banner {
    padding-top: 243px;
    width: 100%;
    margin: 0 auto;
}

.banner-image {
  width: 100%;
  height: auto;
  display: none;
}

/* Show desktop image */
.desktop-banner {
  display: block;
}

.mobile-banner {
  display: none;
}

/* Switch to mobile image */
@media (max-width: 767px) {
   .responsive-banner {
        padding-top: 170px;
        width: 100%;
        margin: 0 auto;
    }
  .desktop-banner {
    display: none;
  }
  .mobile-banner {
    display: block;
  }
}
