{% if product.metafields.custom.best_paired_with != blank %}
  {%- style -%}
    #shopify-section-{{ section.id }} {
      --section-padding-top: {{ section.settings.padding_top }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom }}px;
      --image-position: {{ section.settings.image_position }};
    }
      @media screen and (min-width: 990px) {
      #shopify-section-{{ section.id }} .slider-buttons {
        display: flex;
      }
    }
  {%- endstyle -%}

  <link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
  <link rel="stylesheet" href="{{ 'component-price.css' | asset_url }}" media="print" onload="this.media='all'">

  {%- if settings.quick_view_enabled and section.settings.enable_quick_view -%}
    <link rel="stylesheet" href="{{ 'section-main-product.css' | asset_url }}" media="print" onload="this.media='all'">
    <link
      rel="stylesheet"
      href="{{ 'component-deferred-media.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}
  <noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>
  <noscript>{{ 'component-price.css' | asset_url | stylesheet_tag }}</noscript>

  {{ 'component-product-grid.css' | asset_url | stylesheet_tag }}
  {{ 'component-card.css' | asset_url | stylesheet_tag }}

  <div class="section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
    <div class="page-width">
      <div class="title-wrapper{% if section.settings.heading == blank %} title-wrapper--no-heading{% endif %} {{ section.settings.heading_alignment }}">
        <{{ section.settings.heading_tag }} class="title {{ section.settings.heading_size }}">
          {{- section.settings.heading | escape -}}
        </{{ section.settings.heading_tag }}>
      </div>
      <!-- custom code to hide main product in best paired with section -->
      {% assign product_id = product.id %}
      <!-- custom code to hide main product in best paired with section ends here -->
      {%- liquid
        assign products_to_display = section.settings.product_list.count

        if section.settings.product_list.count > section.settings.products_to_show
          assign products_to_display = section.settings.products_to_show
        endif
      %}
      <!-- custom code to hide main product in best paired with section -->
      {%- for product in section.settings.product_list limit: products_to_display -%}
        {% if product.id == product_id %}
          {% assign products_to_display = products_to_display | plus: 1 %}
        {% endif %}
      {%- endfor -%}
      <!-- custom code to hide main product in best paired with section ends here -->

      <slider-component class="slider-mobile-gutter">
          <ul
            id="Slider-{{ section.id }}"
            class="{% if section.settings.swipe_on_desktop %}slider slider--tablet-up {% endif %}product-grid grid{% if section.settings.columns_mobile == '1' %} grid--1-col-mobile{% endif %} grid--2-col{% if section.settings.collection == blank or products_to_display == 4 and section.settings.swipe_on_mobile == false %} grid--2-col-tablet grid--4-col-desktop{% else %} grid--3-col-tablet{% if products_to_display == 6 and section.settings.swipe_on_desktop == false %} grid--3-col-desktop{% else %} grid--4-col-desktop{% endif %}{% endif %}{% if section.settings.collection.all_products_count > 2 and section.settings.swipe_on_mobile and section.settings.products_to_show > 2 %} slider slider--tablet{% endif %}{% if section.settings.collection == blank and section.settings.swipe_on_mobile %} slider slider--tablet{% endif %}"
            role="list"
          >
            {%- for product in section.settings.product_list limit: products_to_display -%}
              {% unless product.id == product_id %}
                <li
                  id="Slide-{{ section.id }}-{{ forloop.index }}"
                  class="grid__item{% if section.settings.product_list.count > 2 and section.settings.swipe_on_mobile and section.settings.products_to_show > 2 %} slider__slide{% endif %}"
                >
                  {% render 'card-product',
                    card_product: product,
                    media_size: section.settings.image_ratio,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_quick_buy: section.settings.show_quick_buy,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    enable_quick_view: section.settings.enable_quick_view,
                    enable_color_swatches: section.settings.enable_color_swatches,
                    enable_countdown: section.settings.enable_countdown,
                    enable_image_fill: section.settings.enable_image_fill,
                    lazy_load: true
                  %}
                </li>
              {% endunless %}
            {%- else -%}
              {%- for i in (1..4) -%}
                <li class="grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}">
                  {% render 'card-product-placeholder', media_size: section.settings.image_ratio %}
                </li>
              {%- endfor -%}
            {%- endfor -%}
          </ul>
      </slider-component>
    </div>
  </div>
{% endif %}

