<div class="main-section-video page-width">

   <div class="qoute-section">
      <div class="quote-up-img">
      <img src="https://cdn.shopify.com/s/files/1/0650/5539/1970/files/images-removebg-preview.png?v=1710761258">
      </div>
      <div class="Heading-video">
      <h2>{{ product.metafields.custom.product_video_section_heading }}</h2>
    </div>
      <div class="quote-down-img">
      <img src="https://cdn.shopify.com/s/files/1/0650/5539/1970/files/images-removebg-preview.png?v=1710761258">
      </div>
    </div>

  {% if product.metafields.custom.product_video_section_video != blank %}   
    <div class="video-section-video">
      <video class="brand_video_styling" width="320" height="240" autoplay muted loop>
            <source type="video/mp4" src="{{ product.metafields.custom.product_video_section_video }}" >
      </video> 
    </div>  
  {% else %}

   <div class="video-section-image">
    <img src="{{ product.metafields.custom.video_template | image_url:"master", width:100}}">
   </div>  
    
  {% endif %}  
  
  <div class="content-section-video">
      <div class="Heading-desktop-video">
      <h2>{{ product.metafields.custom.product_video_section_heading }}</h2>
    </div>
   
    <div class="sub-content-video">
      <p>{{ product.metafields.custom.product_video_section_content }}</p>
    </div>
  </div>
</div>



<style>
  .Heading-desktop-video{
      Display:block;
    }
  .qoute-section{
    display:none;
  }
.main-section-video {
    width: 100%;
    margin: auto;
    display: flex;
    padding-top: 4rem;
    padding-bottom: 4rem;
}
.video-section-video {
    width: 75%;
  overflow:hidden;
}
  .video-section-video video {
    /* width: 55rem; */
    width:100%;
    height: 31rem;
}
  .video-section-image {
    width: 75%;
  overflow:hidden;
    display:flex;
    align-items: center;
}
  .video-section-image img {
      
    max-width: 100%;
    max-height: 100%;
    height: 31rem;
}
  .content-section-video {
    width: 65%;
    padding: 2%;
    margin-left: 6%;
}
  .sub-content-video p {
    font-size: 20px;
}
  @media only screen and (max-width: 600px) {
    .Heading-desktop-video{
      Display:none;
    }
    .qoute-section{
    display:block;
  }
    .main-section-video {
    width: 100%;
    margin: auto;
    display: block;
    margin-top: 20px; 
    margin-bottom: 20px; 
         padding-top: 0rem;
    padding-bottom: 0rem;
          padding: 0 0;
}
    .video-section-video {
    width: 100%;
}
      .video-section-image {
    width: 100%;
}
    .video-section-video video {
    /* width: 40rem;
    height: 23rem; */
    max-width: 100%;
    max-height: 100%;
    height: 25rem;
}
    .video-section-image img {
      
    max-width: 100%;
    max-height: 100%;
    height: 25rem;
}
    .content-section-video {
    width: 100%;
    padding: 0%;
    margin-left: 0%;
      padding: 0 7.5px;
}
    /* .Heading-video h2 {
        margin-bottom: 0px;
    font-size: 21px;
    font-weight: 700;
          margin-top: 0px;
} */
    .sub-content-video p {
    font-size: 18px;
    margin-top: 4px;
    line-height: 25px;
      padding: 0 0.5rem;
}
    .qoute-section {
    width: 91%;
    position: relative;
    margin: auto;
      padding-bottom: 1rem;
}
 .quote-up-img {
    width: 10%;
    position: absolute;
    left: 0;
    top: 0;
}
.quote-up-img img {
    width: 100%;
    rotate: 0deg;
}
.Heading-video {
    text-align: center;
    width: 70%;
    margin: auto;
}
.Heading-video h2 {
    margin-bottom: 0px;
    font-size: 25px;
    font-weight: 700;
    margin-top: 0px;
}
.quote-down-img {
    width: 10%;
    position: absolute;
    right: 0px;
    bottom: 0;
}
.quote-down-img img {
    width: 100%;
    rotate: 180deg;
}
  }
</style>






