{%- liquid
  assign custom_class = ''
  if section.settings.use_custom_colors
    assign custom_class = custom_class | append: ' rich-text--colored'
  endif
  if section.settings.horizontal_content
    assign custom_class = custom_class | append: ' rich-text--horizontal'
  endif
-%}

{%- if section.settings.show_divider %}<div class="section--divider">{% endif -%}
<div class="page-width{% if section.settings.narrow %} page-width--inner{% endif %}">
  <div class="rich-text section--padding{{ custom_class }} {{section.settings.custom_class_admin}}">
    <div class="rich-text__blocks {{ section.settings.text_alignment }} mobile-{{ section.settings.mobile_text_alignment }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2
              class="rich-text__heading {{ block.settings.heading_size }}{% if block.settings.heading_bold %} text-bold{% endif %}{% if block.settings.heading_semi_bold %} text-semi-bold{% endif %}{% if block.settings.heading_uppercase %} uppercase{% endif %}"
              {{ block.shopify_attributes }}
            >
              {{- block.settings.heading | escape -}}
            </h2>
          {%- when 'subheading' -%}
            <p
              class="rich-text__subheading{% if block.settings.secondary_color %} rich-text__subheading--colored{% endif %} {{ block.settings.subheading_size }}{% if block.settings.subheading_bold %} text-bold{% endif %}{% if block.settings.subheading_uppercase %} uppercase{% endif %}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.subheading | escape }}
            </p>
          {%- when 'text' -%}
            <div
              class="rich-text__text{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}{% if block.settings.secondary_color %} rich-text__text--colored{% endif %} {{ block.settings.text_size }} rte{% if block.settings.text_bold %} text-bold{% endif %}{% if block.settings.text_uppercase %} uppercase{% endif %}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.text }}
            </div>
             <!-- adding custom subtitle code here -->

            {%- when 'subtitle' -%}

               {% render 'subtitle-animation', block: block %}
          {%- when 'custom_liquid' -%}
            <div class="rich-text__text rte" {{ block.shopify_attributes }}>{{ block.settings.custom_liquid }}</div>
  <div class="review_div_container">
      {%- when 'image' -%}   
          {%- when 'rating' -%}
            <div class="product-rating-share-container">
              <div class="product-rating-container reviews_div">
              {%- if product.metafields.reviews.rating.value != blank -%}
                {% liquid
                  assign rating_decimal = 0
                  assign decimal = product.metafields.reviews.rating.value.rating | modulo: 1
                  if decimal >= 0.3 and decimal <= 0.7
                    assign rating_decimal = 0.5
                  elsif decimal > 0.7
                    assign rating_decimal = 1
                  endif
                %}
                
                <div
                  class="rating"
                  role="img"
                  aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product.metafields.reviews.rating.value, rating_max: product.metafields.reviews.rating.value.scale_max }}"
                >
                  {% render 'icon', icon: 'star' %}
                  {%- assign review_value = product.metafields.judgeme.badge | split: "data-average-rating='" | last | split: "'" |first | plus: 0 | round: 1 -%}
                  <span aria-hidden="true">
                    {{ review_value }}
                    {% comment %}
                    {{ product.metafields.reviews.rating.value.rating | round: 1 }}
                    {% endcomment %}
                  </span>
                  <span aria-hidden="true"> | </span>
                  {% render 'icon', icon: 'whatsapp-verified' %}
                  {%- assign review_count = product.metafields.judgeme.badge | split: "data-number-of-reviews='" | last | split: "'" |first | plus: 0 -%}
                  <span aria-hidden="true">
                    ({{ review_count }} {{ review_count | pluralize: 'Review', 'Reviews' }})
                    {% comment %}
                    ({{ product.metafields.reviews.rating_count }} {{ product.metafields.reviews.rating_count | pluralize: 'Review', 'Reviews' }})
                    {% endcomment %}
                  </span>
                </div>
                <p class="rating-text caption">
                  <span aria-hidden="true">
                    {{- product.metafields.reviews.rating.value }} /
                    {{ product.metafields.reviews.rating.value.scale_max -}}
                  </span>
                </p>
                <p class="rating-count caption">
                  <span aria-hidden="true">({{ product.metafields.reviews.rating_count }})</span>
                  <span class="visually-hidden">
                    {{- product.metafields.reviews.rating_count }}
                    {{ 'accessibility.total_reviews' | t -}}
                  </span>
                </p>
              {%- elsif product.metafields.reviews.rating.value == blank -%}
                <p class="rating">
                  <span aria-hidden="true">No Reviews</span>
                </p> 
              {%- endif -%}
              </div>
              {% if block.settings.show_share_botton %}
              <div class="product-share-container">
              {%- liquid
                assign share_url = product.selected_variant.url | default: product.url | prepend: request.origin
                assign share_image = product.selected_or_first_available_variant.featured_media.preview_image | default: product.featured_media.preview_image
                render 'share-button', block: block, share_link: share_url, share_image: share_image, share_title: product.title
              -%}
              </div>
              {% endif %}  

                    {%- when 'image' -%}   
      {%- if block.settings.image != blank -%}
        <div class="rich-text-image reviews_div rating" {% if block.settings.image-hide-desktop %} large-hide{% endif %}{% if block.settings.image-hide-mobile %} small-hide{% endif %}>
          <img src="{{ block.settings.image | img_url: '500x' }}" alt="Image" height="auto" width="55%">
        </div>
     
      {%- endif -%}
            </div>    

<!-- image picker -->
      {% comment %}
      {%- when 'image' -%}   
      {%- if block.settings.image != blank -%}
        <div class="rich-text-image" {% if block.settings.image-hide-desktop %} large-hide{% endif %}{% if block.settings.image-hide-mobile %} small-hide{% endif %}>
          <img src="{{ block.settings.image | img_url: '500x' }}" alt="Image" height="auto" width="55%">
        </div>
     
      {%- endif -%}
      {% endcomment %}
<!-- image picker end -->
          {%- when 'button' -%}
            {%- if block.settings.button_label != blank -%}
              {%- if block.settings.button_style_secondary -%}
                <a
                  class="button button--cta button--{{ block.settings.button_size }}"
                  {% if block.settings.button_link != blank %}
                    href="{{ block.settings.button_link }}"
                  {% else %}
                    role="link" aria-disabled="true"
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  <span class="label">{{ block.settings.button_label | escape }}</span>
                  {% render 'icon', icon: 'arrow' %}
                </a>
              {%- else -%}
                <a
                  class="button button--{{ block.settings.button_size }}"
                  {% if block.settings.button_link != blank %}
                    href="{{ block.settings.button_link }}"
                  {% else %}
                    role="link" aria-disabled="true"
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
      
    </div>
  </div>
</div>
{%- if section.settings.show_divider %}</div>{% endif -%}
